{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "strict": true,
        "importHelpers": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "noEmit": true,
        "jsx": "preserve",
        "skipLibCheck": true,
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "./doc-pages/**/main.ts",
        "./doc-pages/**/*_typescript.ts",
        "./doc-pages/**/*_angular.ts",
        "./doc-pages/**/*.ts",
        "./doc-pages/**/*.tsx",
        "./shared-types/**/*"
    ],
    "exclude": [
        "./node_modules"
    ]
}